{
    "extends": "@app/tsconfig/nestjs.json",
    "compilerOptions": {
        "outDir": "./dist",
        "rootDir": "./src",
        "module": "commonjs",
        "moduleResolution": "node",
        "noEmit": false,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "paths": {
            "@app/common": [
                "../../packages/common/dist"
            ],
            "@app/common/*": [
                "../../packages/common/dist/*"
            ],
            "@app/database": [
                "../../packages/database/dist"
            ],
            "@app/database/*": [
                "../../packages/database/dist/*"
            ]
        }
    },
    "include": [
        "src/**/*"
    ]
}